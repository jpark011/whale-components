{
  "name": "@jpark011/whale",
  "version": "1.0.0",
  "description": "lit & minimal UI Components",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "customElements": "dist/custom-elements.json",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "rollup -c",
    "start": "wds --watch",
    "lint": "eslint \"src/**/*.{js,ts}\" && lit-analyzer",
    "format": "prettier --write .",
    "test": "wtr --coverage",
    "test:watch": "wtr --watch",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile custom-elements.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpark011/whale-components.git"
  },
  "keywords": [
    "lit",
    "whale",
    "components",
    "web-component",
    "custom-element"
  ],
  "author": "Jay Park",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jpark011/whale-components/issues"
  },
  "homepage": "https://github.com/jpark011/whale-components#readme",
  "dependencies": {
    "lit": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "@web/dev-server": "^0.1.20",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.9.1",
    "@web/test-runner": "^0.13.15",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lit": "^1.5.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "lit-analyzer": "^1.2.1",
    "mocha": "^9.0.3",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.3",
    "rollup": "^2.55.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^11.1.2",
    "ts-lit-plugin": "^1.2.1",
    "tslib": "^2.3.0",
    "typescript": "~4.3.5",
    "web-component-analyzer": "^1.1.6"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix",
    "*.{ts,js,json,html,css}": "prettier --write"
  }
}
